<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FitFlow.Views.MainPage"
             Title="FitFlow"
             BackgroundColor="#f4f4f4">

    <ScrollView>
        <StackLayout Spacing="20" Padding="20">

            <!-- Background Image -->
            <Image Source="https://image.shutterstock.com/image-vector/bodybuilder-fitness-model-illustration-260nw-211085365.jpg"
                   Aspect="AspectFill"
                   Opacity="0.8"
                   HeightRequest="200" />

            <!-- Motivational Quote of the Day -->
            <Frame CornerRadius="15"
                   BackgroundColor="White"
                   Padding="20"
                   HasShadow="True">
                <StackLayout>
                    <Label Text="Quote of the Day"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="#333"
                           HorizontalOptions="Center" />
                    <Label Text="{Binding DailyQuote}"
                           FontSize="14"
                           TextColor="#666"
                           HorizontalOptions="Center"
                           Margin="0,10,0,0"
                           TextType="Html" />
                </StackLayout>
            </Frame>

            <!-- Horizontal Scrollable Workout Cards -->
            <StackLayout>
                <Label Text="Today's Workouts"
                       FontSize="18"
                       FontAttributes="Bold"
                       TextColor="#333"
                       Margin="0,10,0,5" />

                <CollectionView ItemsSource="{Binding Workouts}"
                                HorizontalScrollBarVisibility="Never"
                                ItemsLayout="HorizontalList"
                                HeightRequest="200">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame CornerRadius="15"
                                   BackgroundColor="White"
                                   Padding="10"
                                   HasShadow="True"
                                   WidthRequest="160"
                                   HeightRequest="180">
                                <StackLayout>
                                    <Image Source="{Binding ImageUrl}"
                                           Aspect="AspectFill"
                                           HeightRequest="80" />
                                    <Label Text="{Binding WorkoutName}"
                                           FontSize="14"
                                           FontAttributes="Bold"
                                           TextColor="#333"
                                           HorizontalOptions="Center"
                                           Margin="0,5,0,0" />
                                    <Label Text="{Binding Duration, StringFormat='Duration: {0}'}"
                                           FontSize="12"
                                           TextColor="#666"
                                           HorizontalOptions="Center"
                                           Margin="0,2,0,0" />
                                    <Label Text="{Binding CaloriesPerMinute, StringFormat='Calories: {0} kcal/min'}"
                                           FontSize="12"
                                           TextColor="#666"
                                           HorizontalOptions="Center"
                                           Margin="0,2,0,0" />
                                </StackLayout>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </StackLayout>

            <!-- Check It Button -->
            <Button Text="Check It"
                    BackgroundColor="#ff7f50"
                    TextColor="White"
                    CornerRadius="25"
                    FontSize="Medium"
                    HorizontalOptions="Center"
                    WidthRequest="200"
                    HeightRequest="50"
                    Clicked="OnCheckItClicked" />

            <!-- Benefits Section -->
            <Frame CornerRadius="15"
       BackgroundColor="White"
       Padding="20"
       HasShadow="True"
       IsVisible="{Binding IsBenefitsVisible}">
                <StackLayout>
                    <Label Text="Today's Workout Summary"
               FontSize="18"
               FontAttributes="Bold"
               TextColor="#333"
               HorizontalOptions="Center" />
                    <Label Text="{Binding TotalDuration, StringFormat='Total Duration: {0}'}"
               FontSize="14"
               TextColor="#666"
               HorizontalOptions="Center"
               Margin="0,10,0,0" />
                    <Label Text="{Binding TotalCalories, StringFormat='Total Calories Burned: {0} kcal'}"
               FontSize="14"
               TextColor="#666"
               HorizontalOptions="Center"
               Margin="0,5,0,0" />
                    <Label Text="Benefits of Today's Workout"
               FontSize="16"
               FontAttributes="Bold"
               TextColor="#333"
               HorizontalOptions="Center"
               Margin="0,10,0,0" />
                    <Label Text="{Binding Benefits}"
               FontSize="14"
               TextColor="#666"
               HorizontalOptions="Center"
               Margin="0,5,0,0" />
                </StackLayout>
            </Frame>

            <!-- Social Sharing Button -->
            <Button Text="Share Your Progress"
                    BackgroundColor="#4A90E2"
                    TextColor="White"
                    CornerRadius="25"
                    FontSize="Medium"
                    HorizontalOptions="Center"
                    WidthRequest="200"
                    HeightRequest="60"
                    Clicked="OnShareProgressClicked" />
        </StackLayout>
    </ScrollView>
</ContentPage>